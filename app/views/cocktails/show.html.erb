<div class="container mt-5">
  <% if @cocktail.photo.attached? %>
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= cl_image_path @cocktail.photo.key %>');">
  <% else %>
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('https://flawless.life/wp-content/uploads/2017/09/gods-of-mixology-cover.jpg');">
  <% end %>
    <div class="container">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>

<div class="container">
  <div class="row mt-5">
  
    <div class="col-8">
        <div class="big-border-left">
        <% @cocktail.doses.each do |dose| %>
          <ul>
            <li>
              <%= dose.description %>
              <%= dose.ingredient.name%>
              <%= link_to "delete", dose_path(dose), method:"delete",class:"delete-link" %>
            </li>
          </ul>
        <% end %>
        </div>
    </div>

    <div class="col-4">
      <div class="big-border-left">
        <h4>Add a new dose</h4>

        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
            <%= f.association :ingredient, input_html: { class: 'select2' }%>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>

</div>




