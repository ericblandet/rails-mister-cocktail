<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=asset_url('cocktail.jpg')%>);">
  <div class="container">
    <h1>Name your cocktail !</h1>
  </div>
</div>


<div class="container mt-5">

  <%= simple_form_for (@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create!", class:"eric-button" %>
  <% end %>

</div>